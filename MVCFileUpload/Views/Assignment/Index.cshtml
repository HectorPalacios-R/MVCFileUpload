@model List<MVCFileUpload.Models.Assignment>
<h1>Ypload to Folder </h1>
@using (Html.BeginForm("Upload", "Assignment", FormMethod.Post,
			new { enctype = "multipart/form-data" })) //allows file uploads
{
	<label for="uploaderName"> Your Name: </label>
	<input type="text" name="uploaderName" required />

	<br />

	<label for="file"> Select File </label>
	<input type="file" name="file" required />

	<br />

	<input type="submit" value="Upload" />
}

<h2> Uploaded Assignment </h2>

<table>
	<tr>
		<th> ID </th>
		<th> File Name </th>
		<th> Uploader Name </th>
		<th> Upload Date </th>
		<th> Actions </th>
	</tr>
	@foreach (var assignmnt in Model) //loop through each item in the list
	{
		<tr>
			<td> @assignmnt.Id </td>
			<td> @assignmnt.FileName </td>
			<td> @assignmnt.UploaderName </td>
			<td> @assignmnt.UploadDate </td>
			<td>
				<a href="@Url.Action("OpenFile", "Assignment",
					new { fileName = assignmnt.FileName})"
				   target="_blank"> Open </a>
			</td>
		</tr>
	}
</table>